{% extends 'base.html.twig' %}

{% block title %}Hello CompositionController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">  
    <div class="row">
        
        {% for recette in recettes %}
        <div class="col-md-4">
        <h4> Pour r√©aliser cette recette : <i> {{ recette.title }} </i></h4>
        <h5> Ingredients :
        {% for composition in compositions %}
        {% if recette.id == composition.recette.id %}
             {{ composition.ingredient.name }},
        {% endif %}
        {% endfor %}</h5>
        <p>Poids de cette recette : 
        calculTotal({% for composition in compositions %}+{{ composition.poids }}{% endfor %})</p>
        
        </div>      
        {% endfor %}
    </div>    
</div> 
{% endblock %}