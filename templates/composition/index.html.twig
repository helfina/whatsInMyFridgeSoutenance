{% extends 'base.html.twig' %}

{% block title %}Hello CompositionController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">  
    <div class="row">
        
        {% for recette in recettes %}
        <div class="col-md-4">
        {# <button class="btn btn-primary" href="{{ path('app_recette_detail', {'id' : recette.id}) }}">Détail de la recette</button> #}
        <h4> Pour réaliser la recette : <i> {{ recette.title }} </i></h4>
            <div>
                <h5> Ingredients :</h5>
                    <ul>
                    {% for composition in compositions %}
                    {% if recette.id == composition.recette.id %}
                        <li>{{composition.poids}} grammes de {{ composition.ingredient.name|lower }} </li>
                    {% endif %}
                    {% endfor %}
                    </ul>
            </div>

        <p>Prix de cette recette : 
        {% set price = 0 %}
        {% for composition in compositions %}
        {% if recette.id == composition.recette.id %}
        {% set price = price + composition.price %}
        {% endif %}
        {% endfor %}
        {{ price }} Euros.</p>

        </div>      
        {% endfor %}
    </div>    
</div> 
{% endblock %}